{
    "liveSassCompile.settings.excludeList": [
        "**/node_modules/**",
        "**/website/**",
        "**/design/**",
        "**/vendors/**",
        "**/resources/**",
        "**/vendor/**",
        ".vscode/**",
        "public/**",
    ],
    "liveSassCompile.settings.includeItems": [
        "/website-design/assets/scss/styles.scss",
    ],
    "liveSassCompile.settings.formats": [{
        "format": "compressed",
        "extensionName": ".min.css",
        "savePath": "/website-design/assets/css"
    }],
}
